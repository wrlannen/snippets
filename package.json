{
  "name": "snippets-localstore",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss -c tailwind.config.cjs -i ./public/tailwind.css -o ./public/tailwind.output.css --minify",
    "build:js": "node ./scripts/build-js.mjs",
    "build:vendor": "node ./scripts/build-vendor.mjs",
    "build": "npm run build:css && npm run build:vendor && npm run build:js",
    "dev:css": "tailwindcss -c tailwind.config.cjs -i ./public/tailwind.css -o ./public/tailwind.output.css --watch",
    "start": "npm run build && node server.js",
    "dev": "node --watch server.js",
    "test": "npm run build && playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "esbuild": "^0.25.12",
    "tailwindcss": "^3.4.19"
  }
}
