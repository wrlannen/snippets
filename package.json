{
  "name": "snippets-localstore",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss -c tailwind.config.cjs -i ./public/tailwind.css -o ./public/tailwind.output.css --minify",
    "dev:css": "tailwindcss -c tailwind.config.cjs -i ./public/tailwind.css -o ./public/tailwind.output.css --watch",
    "start": "npm run build:css && node server.js",
    "dev": "node --watch server.js",
    "test": "npm run build:css && playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "tailwindcss": "^3.4.19"
  }
}
